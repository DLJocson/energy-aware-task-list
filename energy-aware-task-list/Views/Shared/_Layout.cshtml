<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Battery Workflow</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;500;600;700;800&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <style>
        /* Tailwind custom classes with CSS variables */
        body {
            background-color: var(--bg-primary);
            color: var(--text-primary);
        }
    </style>
</head>
<body class="font-sans pb-20 smooth-transition">
    <header class="glass-effect sticky top-0 z-20 border-b shadow-sm smooth-transition" style="border-color: var(--border-color); box-shadow: 0 1px 3px var(--shadow-color);">
        <div class="max-w-2xl mx-auto px-4 py-4 flex justify-between items-center">
            <div class="flex items-center gap-3">
                <div class="w-12 h-12 rounded-2xl flex items-center justify-center text-white shadow-lg transform rotate-3 hover-lift" style="background: var(--accent-primary); box-shadow: 0 4px 12px var(--shadow-color);">
                    <i data-lucide="sparkles" class="w-6 h-6"></i>
                </div>
                <div>
                    <h1 class="text-2xl font-black tracking-tight" style="color: var(--text-primary);">
                        Battery<span style="color: var(--accent-primary);">Flow</span>
                    </h1>
                    <p class="text-xs font-bold uppercase tracking-widest" style="color: var(--text-secondary); opacity: 0.8;">Energy Manager</p>
                </div>
            </div>
            <div class="flex gap-2">
                <!-- Dark Mode Toggle -->
                <button id="themeToggle" class="w-12 h-12 rounded-2xl flex items-center justify-center transition-all shadow-sm hover-lift" style="background: var(--card-bg); color: var(--accent-primary); border: 1px solid var(--border-color);" title="Toggle dark mode">
                    <i data-lucide="moon" class="w-6 h-6"></i>
                </button>
                
                <!-- Settings Trigger -->
                <button onclick="toggleSettingsModal()" class="w-12 h-12 rounded-2xl flex items-center justify-center transition-all shadow-sm hover-lift" style="background: var(--card-bg); color: var(--accent-primary); border: 1px solid var(--border-color);" title="Settings">
                    <i data-lucide="settings" class="w-6 h-6"></i>
                </button>
            </div>
        </div>
    </header>

    <main role="main" class="max-w-2xl mx-auto px-4 py-6 space-y-6">
        @RenderBody()
    </main>

    <script src="~/js/theme.js"></script>
    <script src="~/js/tiredMode.js"></script>
    <script>
        lucide.createIcons();
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>